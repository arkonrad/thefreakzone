@import url('https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;700&display=swap');

body {
    background: #101010;
    color: #00ff41;
    font-family: 'Fira Mono', 'Consolas', 'Courier New', monospace;
    margin: 0;
    padding: 0;
    letter-spacing: 0.5px;
}

header, main, section {
    max-width: 700px;
    margin: 2em auto;
    padding: 2em;
    background: rgba(16, 16, 16, 0.98);
    border-radius: 10px;
    box-shadow: 0 0 24px #00ff4160, 0 0 2px #00ff41;
    border: 1.5px solid #00ff41;
}

h1, h2 {
    color: #00ff41;
    text-align: center;
    text-shadow: 0 0 8px #00ff41, 0 0 2px #00ff41;
    font-weight: bold;
    letter-spacing: 2px;
}

input[type="text"], button {
    font-size: 1.1em;
    padding: 0.4em 0.7em;
    margin: 0.2em;
    border-radius: 4px;
    border: 1.5px solid #00ff41;
    background: #181818;
    color: #00ff41;
    font-family: inherit;
    box-shadow: 0 0 8px #00ff4160 inset;
    outline: none;
    transition: border 0.2s, box-shadow 0.2s;
}

input[type="text"]:focus {
    border: 1.5px solid #fff;
    box-shadow: 0 0 12px #00ff41;
    background: #222;
}

button {
    background: #101010;
    color: #00ff41;
    border: 1.5px solid #00ff41;
    cursor: pointer;
    font-weight: bold;
    text-shadow: 0 0 4px #00ff41;
    box-shadow: 0 0 8px #00ff41;
    transition: background 0.2s, color 0.2s, box-shadow 0.2s;
}

button:hover {
    background: #00ff41;
    color: #101010;
    box-shadow: 0 0 16px #00ff41, 0 0 2px #00ff41;
}

.lock-box {
    width: 2em;
    text-align: center;
    font-weight: bold;
    background: #181818;
    color: #00ff41;
    border: 1.5px solid #00ff41;
    box-shadow: 0 0 6px #00ff41;
}

#hint-container {
    text-align: center;
}

#hint-text {
    animation: fadeIn 0.7s;
    color: #fff;
    background: #00ff4120;
    border: 1px solid #00ff41;
    border-radius: 6px;
    padding: 0.7em 1em;
    margin-top: 1em;
    text-shadow: 0 0 6px #00ff41;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

/* Fade-in with a slight glitch effect */
@keyframes glitch-in {
  0% {
    opacity: 0;
    filter: blur(2px) brightness(2);
    transform: scale(1.2) skewX(10deg) translateY(40px);
    text-shadow:
      2px 0 #00fff9,
      -2px 0 #ff00c8;
    clip-path: inset(0 0 100% 0);
  }
  8% {
    opacity: 1;
    filter: blur(1px) brightness(1.5);
    transform: scale(1.05) skewX(-8deg) translateY(-8px);
    text-shadow:
      4px 0 #00fff9,
      -4px 0 #ff00c8;
    clip-path: inset(0 0 0 0);
  }
  15% {
    filter: none;
    transform: none;
    text-shadow:
      2px 0 #00fff9,
      -2px 0 #ff00c8;
    clip-path: inset(0 0 0 0);
  }
  20% {
    filter: none;
    transform: translateX(-5px);
    text-shadow:
      6px 0 #00fff9,
      -6px 0 #ff00c8;
    clip-path: polygon(0 0, 100% 0, 100% 40%, 0 60%);
  }
  25% {
    transform: translateX(5px);
    text-shadow:
      -6px 0 #00fff9,
      6px 0 #ff00c8;
    clip-path: polygon(0 40%, 100% 40%, 100% 60%, 0 60%);
  }
  30% {
    transform: none;
    text-shadow:
      2px 0 #00fff9,
      -2px 0 #ff00c8;
    clip-path: inset(0 0 0 0);
  }
  40% {
    transform: translateX(-3px);
    text-shadow:
      4px 0 #00fff9,
      -4px 0 #ff00c8;
    clip-path: polygon(0 0, 100% 0, 100% 80%, 0 90%);
  }
  45% {
    transform: translateX(3px);
    text-shadow:
      -4px 0 #00fff9,
      4px 0 #ff00c8;
    clip-path: polygon(0 80%, 100% 80%, 100% 100%, 0 100%);
  }
  50% {
    transform: none;
    text-shadow:
      2px 0 #00fff9,
      -2px 0 #ff00c8;
    clip-path: inset(0 0 0 0);
  }
  100% {
    opacity: 1;
    filter: none;
    transform: none;
    text-shadow: none;
    clip-path: none;
  }
}

.glitch-in {
  animation: glitch-in 1.2s cubic-bezier(.25,1.7,.5,1.15);
  will-change: filter, transform, opacity, clip-path, text-shadow;
}